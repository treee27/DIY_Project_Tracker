<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Project - <%= project.title %></title>

  <!-- Bootstrap first -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS after Bootstrap -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="bg-light">

  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">DIY Tracker</a>
      <a href="/projects/list" class="btn btn-outline-light btn-sm ms-auto">All Projects</a>
    </div>
  </nav>

  <div class="container py-4">
    <h1 class="mb-4 text-center">✏️ Edit DIY Project</h1>

    <div class="card shadow-sm">
      <div class="card-body">
        <form action="/projects/<%= project._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

          <!-- Title -->
          <div class="mb-3">
            <label class="form-label">Project Title</label>
            <input type="text" name="title" class="form-control" value="<%= project.title %>" required>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control" rows="3"><%= project.description %></textarea>
          </div>

          <!-- Materials -->
          <div class="mb-3">
            <label class="form-label">Materials / Requirements</label>
            <input type="text" name="materials" class="form-control" value="<%= project.materials %>">
          </div>

          <!-- Status -->
          <div class="mb-3">
            <label for="status" class="form-label">Status</label>
            <select id="status" name="status" class="form-select">
              <option <%= project.status === 'Not Started' ? 'selected' : '' %>>Not Started</option>
              <option <%= project.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
              <option <%= project.status === 'Completed' ? 'selected' : '' %>>Completed</option>
            </select>
          </div>

          <!-- Progress -->
          <div class="mb-3">
            <label for="progress" class="form-label">Progress (%)</label>
            <input type="number" id="progress" name="progress" class="form-control" min="0" max="100" value="<%= project.progress || 0 %>">
          </div>

          <!-- Start Date -->
          <div class="mb-3">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" value="<%= project.startDate ? project.startDate.toISOString().substring(0,10) : '' %>">
          </div>

          <!-- Due Date -->
          <div class="mb-3">
            <label for="dueDate" class="form-label">Due Date</label>
            <input type="date" id="dueDate" name="dueDate" class="form-control" value="<%= project.dueDate ? project.dueDate.toISOString().substring(0,10) : '' %>">
          </div>

          <!-- Current Image -->
          <div class="mb-3">
            <label class="form-label">Current Image</label><br>
            <% if (project.imagePath) { %>
              <img src="<%= project.imagePath %>" alt="Project Image" class="img-thumbnail mb-2" style="max-width: 200px;">
            <% } else { %>
              <p class="text-muted">No image uploaded</p>
            <% } %>
          </div>

          <!-- Upload New Image -->
          <div class="mb-3">
            <label class="form-label">Upload New Image (optional)</label>
            <input type="file" name="image" class="form-control">
          </div>

          <!-- Buttons -->
          <div class="d-flex justify-content-between">
            <a href="/projects/<%= project._id %>" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-success">Update Project</button>
          </div>

        </form>
      </div>
    </div>
  </div>

  <!-- <footer class="footer mt-4 text-center">
    &copy; <%= new Date().getFullYear() %> DIY Project Tracker
  </footer> -->
   <!-- Footer -->
  <footer class="footer">
    <div class="footer-content">
      <p>&copy; 2023 DIY Project Tracker</p>
      <div class="social-icons">
        <a href="#" class="social-icon"><i class="fab fa-facebook"></i></a>
        <a href="#" class="social-icon"><i class="fab fa-twitter"></i></a>
        <a href="#" class="social-icon"><i class="fab fa-instagram"></i></a>
        <a href="#" class="social-icon"><i class="fab fa-pinterest"></i></a>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
